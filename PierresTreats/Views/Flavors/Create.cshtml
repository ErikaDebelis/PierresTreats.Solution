@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Add a Flavor</h2>
<br>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId", "-select-")

  <button type="submit" value="Create" class="btn btn-outline-secondary">Add Flavor</button>
}
<br>
<p>@Html.ActionLink("Show all Flavors", "Index")</p>
