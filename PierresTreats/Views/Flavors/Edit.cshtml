@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Edit</h2>

<h4>Edit this Flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  <div class="form-horizontal">
    <hr />
    @Html.HiddenFor(model => model.FlavorId)

    <div class="form-group">
      @Html.LabelFor(model => model.Name)
      <div class="col-auto">
      @Html.TextBoxFor(model => model.Name)
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <button type="submit" value="Save" class="btn btn-outline-secondary">Save Changes</button>
      </div>
    </div>
  </div>
}
<p>
  @Html.ActionLink("Back to Flavors list", "Index") | 
  @Html.ActionLink("Add a new Treat", "Create", "Treats")
</p>
<h5>@Html.ActionLink("Main Menu", "Index", "Home")</h5>