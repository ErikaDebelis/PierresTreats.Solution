@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<h1>Flavor List</h1>

@if (@Model.Count == 0)
{
  <h3><i class="bi bi-exclamation-triangle"></i> No Flavors have been added yet!<i class="bi bi-exclamation-triangle"></i></h3>
}

<ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>
  @Html.ActionLink("Add a new Flavor", "Create") | 
  @Html.ActionLink("Add a new Treat", "Create", "Treats")
</p>
<h5>@Html.ActionLink("Main Menu", "Index", "Home")</h5>