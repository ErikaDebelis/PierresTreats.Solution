@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<h1>Flavor List</h1>

<table class="table">
  <tr>
      <th>
          @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
      </th>
  </tr>
</table>

@if (@Model.Count == 0)
{
  <h3><i class="bi bi-exclamation-triangle"></i> No Flavors have been added yet!<i class="bi bi-exclamation-triangle"></i></h3>
}

<ul>
  @foreach (Flavor flavor in Model)
  {
    @Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.flavorId })
  }
</ul>

<h5>@Html.ActionLink("Add a new Flavor", "Create") | @Html.ActionLink("Main Menu", "Index", "Home")</h5>