@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h2>Add a flavor to @Html.DisplayFor(model => model.Description)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId", "-select-")

<button type="submit" value="Save" class="btn btn-outline-secondary">Add Flavor</button>
}

<p>@Html.ActionLink("Add a new Flavor", "Create", "Flavors") | 
  @Html.ActionLink("View All Treats", "Index") | 
  @Html.ActionLink("Main Menu", "Index", "Home")
</p>
