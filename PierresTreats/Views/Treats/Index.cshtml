@{
  Layout = "_Layout";
}
@using PierresTreats.Models;

<table class="table">
  <tr>
    <td>
      <h3>Treat Name</h3>
    </td>
  </tr>
  <tr>
    @if (@Model.Count == 0)
    {
      <th>
        <h3>No Treats have been added yet!</h3>
      </th>
    }
  </tr>
    @foreach(Treat treat in Model)
    {
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>
              <li>@Html.ActionLink($"{treat.Description}", "Details", new { id = treat.TreatId })</li>
            </th>
          </tr>
        </thead>
      </table>
    }
</table>
<td>
  @Html.ActionLink("Add a treat", "Create")
</td>
<h5>@Html.ActionLink("Main Menu", "Index", "Home")</h5>